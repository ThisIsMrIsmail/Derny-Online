      <h4 class="mb-3">Personal information</h4>

      <form action="/new-employee" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="row g-3">
          
          <!-- Full Name in English -->
          <div class="col-lg-6">
            <label for="fullNameEN" class="form-label">Full name <span class="text-muted">(in english)</span><span class="mandatory"> *</span>
            </label>
            <div class="input-group has-validation">
              <input type="text" dir="ltr" class="form-control" id="fullNameEN" name="fullNameEN" minlength="15" maxlength="50" required>
              <div class="invalid-feedback">
                Valid full name is required.
              </div>
            </div>
          </div>
          <!-- Full Name in Arabic -->
          <div class="col-lg-6">
            <label for="fullNameAR" class="form-label">Full name <span class="text-muted">(in arabic)</span></label>
            <div class="input-group has-validation">
              <input type="text" dir="rtl" class="form-control" id="fullNameAR" name="fullNameAR" value="- - - - - - -" minlength="15" maxlength="50" required>
              <div class="invalid-feedback">
                Valid full name is required.
              </div>
            </div>
          </div>
          <!-- Email -->
          <div class="col-lg-4 col-md-12">
            <label for="email" class="form-label">Email<span class="mandatory"> *</span></label>
            <div class="input-group has-validation">
              <input type="email" class="form-control" id="email" name="email" value="" placeholder="you@example.com" minlength="15" maxlength="60" required>
              <div class="invalid-feedback">
                Valid email address is required.
              </div>
            </div>
          </div>
          <!-- Contract -->
          <div class="col-lg-2 col-md-12">
            <label for="contract" class="form-label">Contract Period<span class="mandatory"> *</span></label>
            <div class="input-group has-validation">
              <select class="form-select" id="contract" name="contract" required>
                <option value="">-- select --</option>
                <option value="One Year">One Year</option>
                <option value="Two Years">Two Years</option>
              </select>
              <div class="invalid-feedback">
                Valid email address is required.
              </div>
            </div>
          </div>
          <!-- Date of Birth -->
          <div class="col-lg-3">
            <label for="dateOfBirth" class="form-label">Date of Birth<span class="mandatory"> *</span></label>
            <div class="input-group has-validation">
              <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" min="1950-01-01" max="2005-01-01" required>
              <div class="invalid-feedback">
                Valid date of Birth is required.
              </div>
            </div>
          </div>
          <!-- Joining Date -->
          <div class="col-lg-3">
            <label for="dateOfJoining" class="form-label">Date of Joining<span class="mandatory"> *</span></label>
            <div class="input-group has-validation">
              <input type="date" class="form-control" id="dateOfJoining" name="dateOfJoining" min="1990-01-01" required>
              <div class="invalid-feedback">
                Valid date of Joining is required.
              </div>
            </div>
          </div>
          <!-- Identity ID -->
          <div class="col-lg-3">
            <label for="identityId" class="form-label">Identity ID<span class="mandatory"> *</span></label>
            <input type="text" class="form-control" id="identityId" name="identityId" minlength="10" maxlength="16" placeholder="0123456789" required>
            <div class="invalid-feedback">
              Valid identity id is required.
            </div>
          </div>
          <!-- Passport ID -->
          <div class="col-lg-3">
            <label for="passportId" class="form-label">Passport ID <span class="text-muted">(for non-Saudis)</span></label>
            <div class="input-group has-validation">
              <input type="text" class="form-control" id="passportId" name="passportId" minlength="8" maxlength="10" placeholder="A12345678" required>
              <div class="invalid-feedback">
                Valid passport id is required.
              </div>
            </div>
          </div>
          <!-- Nationality -->
          <div class="col-lg-3">
            <label for="nationality" class="form-label">Nationality<span class="mandatory"> *</span></label>
            <div class="input-group has-validation">
              <select class="form-select" id="nationality" name="nationality" required>
                <option value="">-- select --</option>
              </select>
              <div class="invalid-feedback">
                Nationality is required.
              </div>
            </div>
          </div>
          <!-- Gender -->
          <div class="col-lg-3">
            <label for="gender" class="form-label">Gender<span class="mandatory"> *</span></label>
